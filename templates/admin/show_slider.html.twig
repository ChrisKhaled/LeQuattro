{% extends "base.html.twig" %}

{% block title %}Slider
{% endblock %}

{% block body %}

	<h1 class="text-center">Photos du carrousel</h1>
	<div class="row">

		<div class="col-6 mx-auto">
			<a href="{{ path('create_slider') }}" class="d-block mx-auto col-4 btn btn-primary">Ajouter une photo
				<i class="fa fa-plus-circle"></i>
			</a>
		</div>
		{# <div class="col-6 mx-auto">
													<a href="{{ path('show_trash') }}" class="d-block mx-auto col-4 btn btn-primary">Archives <i class="fa fa-eye"></i>
													</a>
												</div> #}
	</div>


	<div class="row">
		<div class="col-11 mx-auto my-5">

			<table class="table table-hover">
				<thead class="table-danger">
					<tr>
						<th>#</th>
						<th>Photo</th>
						<th>Ordre</th>
						<th>Ajoutée le :</th>
						<th>Actions</th>
					</tr>
				</thead>

				<tbody>
					{% for slider in slider %}
						<tr>
							<td>{{ slider.id }}</td>
							<td>
								<img src="{{ asset('uploads/' ~ slider.photo) }}" alt="" width="80" height="58" class="img-custom">
							</td>
							<td>{{ slider.ordre }}</td>
							<td>{{ slider.createdAt | date('d/m/Y') }}</td>
							<td>
								<a href="{#{ path('update_slide', {'id': slider.id}) }#}" title="Modifier la photo" class="text-center align-middle text-warning mx-2">
									<i class="fa-solid fa-edit"></i>
								</a>
								<a href="{#{ path('soft_delete_slide', {'id': slider.id}) }#}" title="Archiver la photo" class="text-center align-middle text-danger mx-2" onclick="return confirm('Voulez-vous archiver cette photo ?\n Si oui, ell n'apparaîtra plus dans le carrousel.')">
									<i class="fa-solid fa-trash"></i>
								</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="11" class="bg-warning text-center">Aucune photo dans le slider</td>
						</tr>

					{% endfor %}
				</tbody>
			</table>

		</div>
	</div>

{% endblock %}
