{% extends "base.html.twig" %}

{% block title %}Tableau de bord
{% endblock %}

{% block body %}

	<h1 class="text-center my-3">Tableau de bord</h1>

	{# Flashes #}
	<div class="row">
		<div class="col-6 mx-auto">

			{% include "include/_flashes.html.twig" %}

		</div>
	</div>

	{# Buttons #}
	<div class="row my-5 mx-auto col-10">

		<div class="col-4">
			<a class="btn btn-outline-dark " href="">Ajouter un membre</a>
		</div>

		<div class="col-4">
			<a class="btn btn-outline-dark " href="">Ajouter une chambre</a>
		</div>

		<div class="col-4">
			<a class="btn btn-outline-dark " href="">Voir les archives</a>
		</div>

	</div>


	<div class="row">

		<div class="col-10 mx-auto my-4">

			<h2 class="text-center">Tous les utilisateurs</h2>

			<table class="table">
				<thead class="table-dark">
					<tr>
						<th>#</th>
						<th>Prénom</th>
						<th>Nom</th>
						<th>Email</th>
						<th>Rôle</th>
						<th>Civilité</th>
						<th>Inscrit le</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>

					{% for membre in membres %}

						<tr>
							<td class="text-center">{{ membre.id }}</td>
							<td class="text-center">{{ membre.prenom }}</td>
							<td class="text-center">{{ membre.nom }}</td>
							<td class="text-center">{{ membre.email }}</td>
							<td class="text-center">{{ membre.roles | first }}</td>
							<td class="text-center">{{ membre.civilite}}</td>
							<td class="text-center">{{ membre.createdAt | date('d/m/Y') }}</td>
							<td class="text-center">

								<a href="" class="text-warning" title="Modifier le rôle">
									<i class="fa fa-user-edit"></i>
								</a>

							</td>
						</tr>

					{% else %}

						<tr>
							<td colspan='7' class="bg-info text-center align-middle">Aucun membre inscrit</td>
						</tr>

					{% endfor %}

				</tbody>
			</table>
		</div>
	{% endblock %}
