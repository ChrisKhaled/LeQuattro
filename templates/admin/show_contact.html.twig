{% extends "base.html.twig" %}

{% block title %}Demandes
{% endblock %}

{% block body %}

	<h1 class="text-center my-3">Demandes</h1>

	{# Flashes #}
	<div class="row">
		<div class="col-6 mx-auto">

			{% include "include/_flashes.html.twig" %}

		</div>
	</div>


	<div class="row">

		<div class="col-10 mx-auto my-4">

			<h2 class="text-center">Contacts</h2>

			<table class="table">
				<thead class="table-dark">
					<tr>
						<th class="text-center">#</th>
						<th class="text-center">Nom</th>
						<th class="text-center">Prénom</th>
						<th class="text-center">Email</th>
						<th class="text-center">Sujet</th>
						<th class="text-center">Catégorie</th>
						<th class="text-center">Message</th>
					</tr>
				</thead>
				<tbody>

					{% for contact in contacts %}

						<tr>
							<td class="text-center">{{ contact.id }}</td>
							<td class="text-center">{{ contact.nom }}</td>
							<td class="text-center">{{ contact.prenom }}</td>
							<td class="text-center">{{ contact.email }}</td>
							<td class="text-center">{{ contact.sujet}}</td>
							<td class="text-center">{{ contact.categorie}}</td>
							<td class="text-center">{{ contact.message}}</td>
						</tr>

					{% else %}
						<tr>
							<td colspan="7" class="bg-success text-center align-middle">Aucune demande</td>
						</tr>

					{% endfor %}

				</tbody>
			</table>
		</div>
	{% endblock %}
