{% extends 'base.html.twig' %}

{% block title %}{% endblock %}



{% block body %}

<h1 class="text-center my-3">Toutes les chambres {{ category | title }}</h1>

    {% for chambre in chambres %}

        <div class="card" style="width: 18rem;">
  <img src="{{ asset('uploads/' ~ chambre.photo) }}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">Card title</h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a href="{{ path('show_chambre', {'id': chambre.id}) }}" class="btn btn-primary">Voir la chambre</a>
  </div>
</div>

    {% else %}

    {% endfor %}


{% endblock %}
