{% extends "base.html.twig" %}

	{% block title %}Catégorie {{ category.name }}{% endblock %}

{% block body %}

    <h1 class="text-center my-3">Nos Chambres</h1>

	{# {% include "chambre/index_chambres.html.twig" %} #}

	{# {% include "include/_chambre_categorie.html.twig" %} #}





    <h1 class="text-center my-3">Catégorie {{ category.name }}</h1>

    <div class="row">
        <div class="col-10 mx-auto my-5">

            {% for chambre in chambres | reverse %}

                <div class="row mb-4 border-top p-3">
                    <a href="{{ path('show_chambres' ) }}" title="Voir l'article" class="d-flex text-decoration-none">

                        <div class="col-5">
                            <img src="{{ asset('uploads/' ~ chambre.photo) }}" alt="{{ chambre.titre }}" width="150"  class="img-custom rounded">
                        </div>

                        <div class="col-7 ms-4">
                            <h2 class="text-dark align-middle">{{ chambre.titre }}</h2>
                            <p class="text-muted align-middle">{{ chambre.descriptionCourte }}</p>
                        </div>

                    </a>
                </div>

            {% else %}
                <h3 class="text-center text-warning mt-2">Aucun article pour cette catégorie !</h3>
            {% endfor %}

    

{# {{ render(url('create_chambre')) }} #}

{% endblock %}