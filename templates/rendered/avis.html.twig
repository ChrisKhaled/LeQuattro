{% extends "base.html.twig" %}

{% block title %}Avis
{% endblock %}

{% block body %}
	
	<h1 class="text-center my-3">Avis</h1>
	<div class="row my-5 mx-auto col-10">

		<div class="col-12 text-center">
			<a class="btn btn-outline-dark " href="{{ path('show_avis') }}">Voir les avis</a>
		</div>
	</div>

	<div class="row">
		<div class=" col-6 mx-auto my-3">
			{{ form_start(form) }}

			<div class="row">

				<div class="col-6">

					{{ form_row(form.nom) }}

				</div>

				<div class="col-6">

					{{ form_row(form.prenom) }}

				</div>

			</div>

			{{ form_end(form) }}

		</div>

        

	</div>

{% endblock %}